}
/* 点击查看全部的点 */
.watchAll{
  width:50rpx;
  height:50rpx;
  position:fixed;
  left:15rpx;
  bottom:15%;
  background:#fff;
  padding:20rpx;
}
.watchAll image{
  width:100%;
  height:100%;

}
.container {
  width:100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  font-family: "微软雅黑";
  font-size:28rpx;
} 

.wrapper{
  width:100%;
  height:100%;
}
/*margin*/
.margin-top20{
  margin-top:20rpx;
}
.margin-left20{
  margin-left:20rpx;
}
.margin-right20{
  margin-right: 20rpx;
}
.margin-left60{
  margin-left:60rpx;
}
.paddinglr{
  box-sizing:border-box;
  padding:18rpx;
}
/*颜色定制  */
.color-main{
  color:#3c78ff;
}
.color-blue{
  color:blue;
}
.color-white{
  color:#fff;

}
.color-black{
  color:#000;
}
.color-hui{
  color:#9e9e9e;
}
.ba-blue{
  background:blue;
}
/*图片定制  */
.img40{
  width:40rpx;height:40rpx;
}
.img30{
  width:35rpx;height:35rpx;
}
.img100{
  width:100rpx;
  height:100rpx;
}
.imgText{
  width:100%;
  height:60rpx;
  display:flex;
  flex-direction:row;
  align-items:center;
  justify-content: center;
}
.imgleft{
  margin-left:30%; 
}
.textleft{
  flex:1;
  text-align:left;
  margin-left:20rpx;
}
.textcenter{
  flex:1;
  text-align:center;
}
/*字体定制  */
.font20{
  font-size:20rpx;
}
.font25{
  font-size:25rpx;
}
.font28{
  font-size:28rpx;
}
/*按钮定制  */
.button-blue{
  background:#3c78ff;
  color:#fff;
}
.yuan{
  width:40rpx;
  height:40rpx;
  background:#3c78ff;
  color:#fff;
  border-radius:50%;
  text-align: center;
  line-height:40rpx;
}
/*center  */
.wrapper{
  width:100%;
  height:100%;
}
.center{
  text-align: center;
  align-items: center;
}
/* flex相关 */
.flex-column{
  display:flex;
  flex-direction: column;
}
.flex-row{
  display:flex;
  flex-direction:row;
}
.flex1{
  flex:1;
}
.jus{
  justify-content: center;
}
/*下边框  */
.b_b{
  border-bottom:1px solid #ccc;
}
/*帮助  */
.help{
  width:100%;
  height:50rpx;
  line-height:50rpx;
  color:#607d8b;
}
.help image{
  width:30rpx;
  height:30rpx;
  margin-right:15rpx;
}
/*超出显示滚动  */
.overAuto{
  overflow:auto;
}